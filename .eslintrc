{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      2,
      "double"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "eqeqeq": 2
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "plugins": [
    "markdown"
  ]
}
